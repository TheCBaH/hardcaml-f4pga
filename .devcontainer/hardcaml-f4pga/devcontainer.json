// For format details, see https://aka.ms/devcontainer.json.
{
    "name": "hardcaml-f4pga (prebuild)",
    "image": "ghcr.io/thecbah/hardcaml-f4pga/devcontainer:devel",
    "runArgs": [ "--init", "--privileged" ], // For openFPGALoader
    "mounts": [
        "source=/dev/,target=/dev/,type=bind,consistency=cached"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "mshr-h.veriloghdl",
                "ocamllabs.ocaml-platform"
            ]
        }
    },
    "postCreateCommand": {
        "opam": "sudo sh -ceux \"chown -R $(id -u):$(id -g) ${OPAMROOT}/log\"",
        "submodules": "git submodule update --recursive --init"
    },
    "waitFor": "postCreateCommand"
}
